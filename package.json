{
  "name": "duckdb-for-r",
  "displayName": "DuckDB for R",
  "description": "DuckDB-focused SQL editor for R with intelligent autocomplete, schema introspection, and 500+ DuckDB function signatures. Optimized for Positron IDE.",
  "version": "0.2.0",
  "publisher": "rsqledit",
  "engines": {
    "vscode": "^1.80.0",
    "positron": ">=2024.1.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "R",
    "SQL",
    "DuckDB",
    "autocomplete",
    "database"
  ],
  "activationEvents": [
    "onLanguage:r"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/r-sql-injection.json",
        "scopeName": "r-sql-injection",
        "injectTo": ["source.r"]
      }
    ],
    "configuration": {
      "title": "DuckDB for R",
      "properties": {
        "rsqledit.duckdbPath": {
          "type": "string",
          "default": "",
          "description": "Path to DuckDB database file for schema introspection. Leave empty to auto-detect from R workspace."
        },
        "rsqledit.enableAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable DuckDB SQL autocomplete in R strings"
        },
        "rsqledit.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable DuckDB SQL syntax validation"
        },
        "rsqledit.enableSQLHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable lightweight DuckDB SQL syntax highlighting in R strings"
        }
      }
    },
    "commands": [
      {
        "command": "rsqledit.connectDatabase",
        "title": "DuckDB for R: Connect to DuckDB Database"
      },
      {
        "command": "rsqledit.refreshSchema",
        "title": "DuckDB for R: Refresh DuckDB Schema"
      },
      {
        "command": "rsqledit.loadExtension",
        "title": "DuckDB for R: Load DuckDB Extension for Autocomplete"
      },
      {
        "command": "rsqledit.executeQuery",
        "title": "DuckDB for R: Execute DuckDB Query at Cursor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "duckdb": "^0.10.0"
  }
}
